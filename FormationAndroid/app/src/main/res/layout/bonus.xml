<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BonusActivity">


    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="E"
        android:id="@+id/E"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ff56ff56" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:text="A"
        android:id="@+id/A"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:background="#ffff584c" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="B"
        android:id="@+id/B"
        android:layout_alignBottom="@id/A"
        android:layout_toEndOf="@+id/A"
        android:background="#ff56ff56"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="C"
        android:id="@+id/C"
        android:layout_alignEnd="@id/B"
        android:layout_above="@id/B"
        android:background="#ff5258ff" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="D"
        android:id="@+id/D"
        android:layout_below="@+id/A"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="#ff56ff56" />
</RelativeLayout>